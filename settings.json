{
  //========= START PERSONAL CUSTOM SETTINGS =========//
  // Font and theme
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "Operator Mono Lig",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,

  // Workbench Color Customizations
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#61DBFB",
    "terminalCursor.foreground": "#61DBFB",
    "activityBar.background": "#22272e",
    "activityBar.activeBorder": "#61DBFB",
    "statusBar.background": "#22272e",
    "titleBar.activeBackground": "#2D333B",
    "titleBar.activeForeground": "#ffffff",
    "sideBar.background": "#1C2128",
    "sideBar.foreground": "#ffffff",
    "terminal.background": "#0D1117",
    "editorSuggestWidget.background": "#0D1117",
    "editorSuggestWidget.selectedForeground": "#40e0d0",
    "editorSuggestWidget.selectedBackground": "#000000",
    "editorSuggestWidget.highlightForeground": "#61DBFB",
    "editorSuggestWidget.selectedIconForeground": "#00FF00",
    "editorRuler.foreground": "#2D333B"
  },

  // Fix vim indent using tab key
  "vim.normalModeKeyBindings": [
    { "before": ["<Tab>"], "commands": ["editor.action.indentLines"] },
    { "before": ["<Shift+Tab>"], "commands": ["editor.action.outdentLines"] }
  ],
  "vim.visualModeKeyBindings": [
    { "before": ["<Tab>"], "commands": ["editor.action.indentLines"] },
    { "before": ["<Shift+Tab>"], "commands": ["editor.action.outdentLines"] }
  ],

  // Fix emmet
  "emmet.showSuggestionsAsSnippets": true,
  "files.associations": {
    "*html": "html",
    "*njk": "html"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Fix zoom onscroll
  "editor.mouseWheelZoom": true,

  // Fix vim on paste
  "vim.useSystemClipboard": true,
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["p"],
      "commands": ["editor.action.clipboardPasteAction"]
    }
  ],

  // Format on paste and vscode rulers
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.rulers": [120],

  // Sass Settings
  "liveSassCompile.settings.forceBaseDirectory": "",
  "liveSassCompile.settings.formats": [
    //This is Default
    {
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "./assets/dist/css"
    }
  ],
  //========= END PERSONAL CUSTOM SETTINGS =========//

  //========= START GLOBAL SETTINGS =========//
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.editorAssociations": {
    "*.db": "default"
  },
  "editor.multiCursorModifier": "ctrlCmd",
  "python.defaultInterpreterPath": "C:\\Program Files\\Python39\\python.exe",
  "sync.gist": "c8142ea4aa76da57667d7aa0477895e1",
  "gitlens.advanced.messages": {
    "suppressLineUncommittedWarning": true
  },
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "explorer.confirmDragAndDrop": false,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "editor.lineHeight": 2,
  "workbench.startupEditor": "none",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "workbench.colorTheme": "Dark+ with Italics",
  "powermode.enabled": true,
  "powermode.shake.enabled": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "git.autofetch": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "git.openRepositoryInParentFolders": "never"
  //========= END GLOBAL SETTINGS =========//
}
